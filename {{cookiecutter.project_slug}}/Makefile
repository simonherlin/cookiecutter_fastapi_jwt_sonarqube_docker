ENV_FILE=.env
REQUIREMENTS=requirements.txt
VENV=venv
PROJECT_NAME={{ cookiecutter.project_slug }}

# ---------------------- COMMANDES D'AIDE ----------------------

.PHONY: help
help:
	@echo "Usage: make [target]"
	@echo ""
	@echo "üìå Commandes disponibles :"
	@echo "  install         - Installe l'environnement et les d√©pendances."
	@echo "  start           - Initialise et lance les migrations."
	@echo "  check-all       - Ex√©cute formatage, tests, linting et SonarQube."
	@echo "  tests           - Ex√©cute les tests avec couverture."
	@echo "  run             - D√©marre l'application FastAPI."
	@echo "  jupyterlab      - Lance JupyterLab."
	@echo "  sonar           - Analyse du code avec SonarQube."
	@echo "  format          - Formate le code avec Black."
	@echo "  lint            - V√©rifie le code avec Flake8."
	@echo "  alembic-init    - Initialise Alembic."
	@echo "  alembic-migrate - Cr√©e une migration."
	@echo "  alembic-upgrade - Applique les migrations."
	@echo "  alembic-downgrade - Annule la derni√®re migration."
	@echo "  alembic-reset   - Supprime et recr√©e la base de donn√©es."
	@echo "  docker-build    - Construit l'image Docker."
	@echo "  docker-run      - Lance le conteneur Docker."
	@echo "  clean           - Supprime les fichiers temporaires."

# ---------------------- INSTALLATION ----------------------

.PHONY: install
install: $(VENV)/bin/activate
$(VENV)/bin/activate: $(REQUIREMENTS)
	@echo "üì¶ Installation de l'environnement virtuel et des d√©pendances..."
	python3 -m venv $(VENV)
	$(VENV)/bin/pip install --upgrade pip
	$(VENV)/bin/pip install -r $(REQUIREMENTS)
	@touch $(VENV)/bin/activate
	@echo "‚úÖ Installation termin√©e !"

# ---------------------- ALEMBIC COMMANDS ----------------------

.PHONY: alembic-init
alembic-init:
	@echo "üîß Initialisation d'Alembic..."
	$(VENV)/bin/alembic init migrations
	@echo "‚úÖ Alembic initialis√© avec succ√®s."

.PHONY: alembic-migrate
alembic-migrate:
	@if [ -z "$(m)" ]; then \
		echo "‚ö†Ô∏è  Erreur : Vous devez sp√©cifier un message pour la migration (ex: make alembic-migrate m='ajout table user')"; \
		exit 1; \
	fi
	@echo "üìå Cr√©ation d'une migration avec le message : $(m)"
	$(VENV)/bin/alembic revision --autogenerate -m "$(m)"
	@echo "‚úÖ Migration cr√©√©e avec succ√®s."

.PHONY: alembic-upgrade
alembic-upgrade:
	@echo "üöÄ Application des migrations..."
	$(VENV)/bin/alembic upgrade head
	@echo "‚úÖ Migrations appliqu√©es avec succ√®s."

.PHONY: alembic-downgrade
alembic-downgrade:
	@echo "üîÑ Annulation de la derni√®re migration..."
	$(VENV)/bin/alembic downgrade -1
	@echo "‚úÖ Migration annul√©e avec succ√®s."

.PHONY: alembic-reset
alembic-reset:
	@echo "‚ö†Ô∏è  R√©initialisation compl√®te de la base de donn√©es..."
	rm -f app/db.sqlite3
	$(VENV)/bin/alembic upgrade head
	@echo "‚úÖ Base de donn√©es r√©initialis√©e avec succ√®s !"

# ---------------------- GESTION DU FICHIER ENV.PY ----------------------

.PHONY: change-env
change-env: 
	@echo "üîÑ Remplacement du fichier env.py personnalis√©..."
	@if [ -f "temp/env.py" ]; then \
		cp temp/env.py migrations/env.py; \
		rm -rf temp; \
		echo "‚úÖ env.py mis √† jour."; \
	else \
		echo "‚ö†Ô∏è  Fichier temp/env.py introuvable !"; \
	fi

# ---------------------- INITIALISATION COMPL√àTE ----------------------

.PHONY: start
start: install alembic-init change-env
	@echo "üöÄ Initialisation de la base de donn√©es..."
	@make alembic-migrate m="Initial migration"
	@make alembic-upgrade
	@echo "‚úÖ Projet pr√™t √† l'emploi !"

# ---------------------- TESTS & ANALYSE DU CODE ----------------------

.PHONY: format
format: $(VENV)/bin/activate
	@echo "üé® Formatage du code avec Black..."
	$(VENV)/bin/black app/
	@echo "‚úÖ Formatage termin√©."

.PHONY: tests
tests: $(VENV)/bin/activate
	@echo "üß™ Ex√©cution des tests avec Pytest..."
	$(VENV)/bin/pytest --maxfail=1 --disable-warnings -q \
		--cov=app --cov-report=term-missing --cov-report=html \
		--cov-report=xml:results/coverage.xml tests/ \
		--junitxml=results/pytest-results.xml
	@echo "‚úÖ Tests termin√©s."

.PHONY: lint
lint: $(VENV)/bin/activate
	@echo "üîç V√©rification du code avec Flake8..."
	$(VENV)/bin/flake8 app/ tests/ --format=json > results/flake8-report.json
	@echo "‚úÖ V√©rification termin√©e."

.PHONY: sonar
sonar:
	@echo "üì° Analyse du code avec SonarQube..."
	docker run --rm --network=host \
	  -e SONAR_HOST_URL={{ cookiecutter.sonarqube_server_url }} \
	  -v "$(shell pwd)":/usr/src \
	  sonarsource/sonar-scanner-cli \
	  -Dsonar.projectKey={{ cookiecutter.sonarqube_project_key }} \
	  -Dsonar.token={{ cookiecutter.sonarqube_token }} \
	  -Dsonar.python.coverage.reportPaths=results/coverage.xml \
	  -Dsonar.python.xunit.reportPath=results/pytest-results.xml \
	  -Dsonar.python.flake8.reportPaths=results/flake8-report.json
	@echo "‚úÖ Analyse SonarQube termin√©e."

.PHONY: check-all
check-all: format tests lint sonar
	@echo "‚úÖ Tous les tests et v√©rifications sont pass√©s avec succ√®s !"

# ---------------------- APPLICATION COMMANDS ----------------------

.PHONY: run
run: $(VENV)/bin/activate
	@echo "üöÄ D√©marrage de l'application FastAPI..."
	$(VENV)/bin/uvicorn app.main:app --host 0.0.0.0 --port $(if $(PORT),$(PORT),8000) --reload
	@echo "‚úÖ Serveur FastAPI lanc√©."

.PHONY: jupyterlab
jupyterlab: $(VENV)/bin/activate
	@echo "üìñ D√©marrage de JupyterLab..."
	$(VENV)/bin/jupyter lab
	@echo "‚úÖ JupyterLab lanc√©."

# ---------------------- GESTION DE DOCKER ----------------------

.PHONY: docker-build
docker-build:
	@echo "üê≥ Construction de l'image Docker..."
	docker build -t $(PROJECT_NAME) .
	@echo "‚úÖ Image Docker construite."

.PHONY: docker-run
docker-run:
	@echo "üöÄ Lancement du conteneur Docker..."
	docker run -d --name $(PROJECT_NAME) -p 80:80 $(PROJECT_NAME)
	@echo "‚úÖ Conteneur lanc√©."

# ---------------------- NETTOYAGE ----------------------

.PHONY: clean
clean:
	@echo "üßπ Nettoyage des fichiers temporaires..."
	rm -rf $(VENV)
	find . -type d -name "__pycache__" -exec rm -rf {} +
	find . -type f -name "*.pyc" -exec rm -f {} +
	find . -type f -name "*.pyo" -exec rm -f {} +
	rm -rf results
	@echo "‚úÖ Nettoyage termin√©."
