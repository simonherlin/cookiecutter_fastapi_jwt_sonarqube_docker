# ---------------------- INSTALLATION ----------------------

.PHONY: install
install: $(VENV)/bin/activate
$(VENV)/bin/activate: $(REQUIREMENTS)
	@echo "ğŸ“¦ Installation de l'environnement virtuel et des dÃ©pendances..."
	python3 -m venv $(VENV)
	$(VENV)/bin/pip install --upgrade pip
	$(VENV)/bin/pip install -r $(REQUIREMENTS)
	@touch $(VENV)/bin/activate
	@echo "âœ… Installation terminÃ©e !"

# ---------------------- ALEMBIC COMMANDS ----------------------

.PHONY: alembic-init
alembic-init:
	@echo "ğŸ”§ Initialisation d'Alembic..."
	$(VENV)/bin/alembic init migrations
	@echo "âœ… Alembic initialisÃ© avec succÃ¨s."

.PHONY: alembic-migrate
alembic-migrate:
	@if [ -z "$(m)" ]; then \
		echo "âš ï¸  Erreur : Vous devez spÃ©cifier un message pour la migration (ex: make alembic-migrate m='ajout table user')"; \
		exit 1; \
	fi
	@echo "ğŸ“Œ CrÃ©ation d'une migration avec le message : $(m)"
	$(VENV)/bin/alembic revision --autogenerate -m "$(m)"
	@echo "âœ… Migration crÃ©Ã©e avec succÃ¨s."

.PHONY: alembic-upgrade
alembic-upgrade:
	@echo "ğŸš€ Application des migrations..."
	$(VENV)/bin/alembic upgrade head
	@echo "âœ… Migrations appliquÃ©es avec succÃ¨s."

.PHONY: alembic-downgrade
alembic-downgrade:
	@echo "ğŸ”„ Annulation de la derniÃ¨re migration..."
	$(VENV)/bin/alembic downgrade -1
	@echo "âœ… Migration annulÃ©e avec succÃ¨s."

.PHONY: alembic-reset
alembic-reset:
	@echo "âš ï¸  RÃ©initialisation complÃ¨te de la base de donnÃ©es..."
	rm -f app/db.sqlite3
	$(VENV)/bin/alembic upgrade head
	@echo "âœ… Base de donnÃ©es rÃ©initialisÃ©e avec succÃ¨s !"

# ---------------------- GESTION DU FICHIER ENV.PY ----------------------

.PHONY: change-env
change-env: 
	@echo "ğŸ”„ Remplacement du fichier env.py personnalisÃ©..."
	@if [ -f "temp/env.py" ]; then \
		cp temp/env.py migrations/env.py; \
		rm -rf temp; \
		echo "âœ… env.py mis Ã  jour."; \
	else \
		echo "âš ï¸  Fichier temp/env.py introuvable !"; \
	fi

